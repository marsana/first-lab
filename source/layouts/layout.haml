!!!
%html
	%head
		%meta{:charset => "utf-8"}
		%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
		%title
			= data.page.title
		= stylesheet_link_tag' magnific-popup'
		= stylesheet_link_tag 's'
		
		
		%meta{:name => "viewport", :content => "width=device-width"}/ 
		/ [if lte IE 8]
			/ %script{:src => "javascripts/modernizr-2.6.2.min.js"}
			/ %link{:href => "stylesheets/ie.css", :rel => "stylesheet"}
		/[if IE 9]
			/ %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
	%body
		/ .hse-menu
		.wrapper
			= partial :menu
			.main
				= yield
		%script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
		= javascript_include_tag 'x'
